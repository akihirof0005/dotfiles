#!/bin/bash

if [ "$(uname)" == 'Darwin' ]; then
  echo "update system packages"
  softwareupdate --install --all
  echo "update brew packages"
  brew update
  brew upgrade
  echo "update brew cask packages"
  brew cask upgrade
elif [ "$(expr substr $(uname -s) 1 5)" == 'Linux' ]; then
  yay -Syyu
  yay -Syyua
  OS='Linux'
fi
