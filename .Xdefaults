!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
Xft.dpi:                    120
Xft.antialias:              true
Xft.rgba:                   rgb
Xft.hinting:                true
Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
!-------------------------------------------------------------------------------
URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            10000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
URxvt*font: xft:Ricty Discord:pixelsize=23
Rxvt.kuake.hotkey: F12

! Fix font space
!URxvt*letterSpace: -1

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,tabbedex,clipboard
URxvt.matcher.button:       1
URxvt.urlLauncher:          google-chrome
URxvt.keysym.M-t:           perl:tabbedex:new_tab
URxvt.keysym.M-n:           perl:tabbedex:next_tab
URxvt.keysym.M-p:           perl:tabbedex:prev_tab
URxvt.tabbed.no-tabbedex-keys: true
URxvt.tabbed.not-consumable-keys: 0xff22, 0xff23, 0xff2a

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! iso 14755 disable
URxvt*iso14755: false

! Color
! スケスケにするためのパラメータ
!urxvt*shading: 95
!urxvt*shading: 5
!URxvt*inheritPixmap: true

!To reread your .Xresources file, and throw away your old resources:
!xrdb ~/.Xresources
!To reread your .Xresources file, and keep your old resources:
!xrdb -merge ~/.Xresources

